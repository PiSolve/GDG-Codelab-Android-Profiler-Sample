<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.io.extended.profilerexample.view.TimeView
        android:id="@+id/stop_watch_time"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bkg_circle_stopwatch"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <Button
            android:id="@+id/start_stop_watch"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bkg_button"
            android:text="Start"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/reset_stop_watch"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bkg_button"
            android:text="Reset"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/stop_stop_watch"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bkg_button"
            android:text="Stop"
            android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>
